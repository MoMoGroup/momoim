#include <gtk/gtk.h>
#include <stdlib.h>

cairo_surface_t *image;
int main( int argc, char *argv[])
{
    GtkWidget *window;
    GtkWidget *fixed;
    GtkWidget *button;
    GtkWidget *image;
    GtkWidget *vbox;
    GtkWidget *align;
    gtk_init(&argc, &argv);

    window = gtk_window_new(GTK_WINDOW_TOPLEVEL);
    gtk_window_set_title(GTK_WINDOW(window), "client");
    gtk_window_set_position(GTK_WINDOW(window), GTK_WIN_POS_CENTER);
    gtk_window_set_resizable(GTK_WINDOW(window), FALSE);
    gtk_window_set_default_size(GTK_WINDOW(window), 100, 50);

    fixed = gtk_fixed_new();
    gtk_container_add(GTK_CONTAINER(window), fixed);
    // vbox = gtk_box_new(TRUE, 0);
    //gtk_container_add(GTK_CONTAINER(window), vbox);
    button = gtk_button_new_with_label("Quit");
    image = gtk_image_new_from_file("1.jpg");
    //gtk_box_pack_start(GTK_BOX(vbox), image, FALSE,FALSE, 1);
    gtk_container_add (GTK_CONTAINER (window), image);
    gtk_widget_set_size_request(image,100, 50);
    gtk_fixed_put(GTK_FIXED(fixed), image, 10, 10);
    gtk_fixed_put(GTK_FIXED(fixed), button, 450, 10);

    g_signal_connect(G_OBJECT(button), "clicked",
            G_CALLBACK(gtk_main_quit), G_OBJECT(window));
    //gtk_box_pack_start(GTK_BOX(vbox), button, TRUE, TRUE, 0);
    gtk_widget_set_size_request(button, 10, 10);



    g_signal_connect_swapped(G_OBJECT(window), "destroy",
            G_CALLBACK(gtk_main_quit), NULL);

    gtk_widget_show_all(window);

    gtk_main();

    return 0;
}
void enter_button(GtkWidget *widget, gpointer data)
{
    GdkColor color;
    color.red = 27000;
    color.green = 30325;
    color.blue = 34181;
    gtk_widget_modify_bg(widget, GTK_STATE_PRELIGHT, &color);
}
 g_signal_connect(G_OBJECT(button), "enter",
            G_CALLBACK(enter_button), NULL);
gtk_widget_set_events(window,  // 设置窗体获取鼠标事件

            GDK_EXPOSURE_MASK | GDK_LEAVE_NOTIFY_MASK

                    | GDK_BUTTON_PRESS_MASK | GDK_BUTTON_RELEASE_MASK

                    | GDK_POINTER_MOTION_MASK | GDK_POINTER_MOTION_HINT_MASK);
